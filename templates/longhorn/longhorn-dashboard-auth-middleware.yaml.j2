apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: {{ middleware_name | default("longhorn-dashboard-auth") }}
  namespace: {{ longhorn_namespace | default("longhorn-system") }}  # Namespace por defecto, aseg√∫rate que sea el correcto
  labels:
    app.kubernetes.io/name: longhorn
    app.kubernetes.io/component: middleware
    access: internal
    environment: prod
  annotations:
    maintained-by: devops@socialdevs.site
    created-by: ansible
spec:
  basicAuth:
    secret: {{ secret_name | default("longhorn-dashboard-auth") }}  # Corregido: antes era 'usersSecret'
    realm: "Longhorn UI"
    removeHeader: true # Elimina el encabezado Authorization de la solicitud original
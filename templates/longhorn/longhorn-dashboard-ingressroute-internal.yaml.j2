# playbooks/templates/longhorn/longhorn-dashboard-ingressroute-internal.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: ingressroute-longhorn-internal
  namespace: {{ longhorn_namespace | default("longhorn-system") }}
  labels:
    app.kubernetes.io/name: longhorn
    app.kubernetes.io/component: ingress
    access: internal
    environment: prod
  annotations:
    maintained-by: devops@socialdevs.site
    created-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: "Host(`{{ domain | default('longhorn.socialdevs.site') }}`) && PathPrefix(`/`)"
      kind: Rule
      middlewares:
        - name: {{ middleware_name | default("longhorn-dashboard-auth") }}
          namespace: {{ longhorn_namespace | default("longhorn-system") }}
      services:
        - name: longhorn-frontend
          port: 8000  # Puerto 8000 según el servicio configurado
          scheme: http
    - match: "Host(`{{ domain | default('longhorn.socialdevs.site') }}`) && PathPrefix(`/dashboard`)"
      kind: Rule
      middlewares:
        - name: {{ middleware_name | default("longhorn-dashboard-auth") }}
          namespace: {{ longhorn_namespace | default("longhorn-system") }}
        - name: strip-prefix-dashboard
          namespace: {{ longhorn_namespace | default("longhorn-system") }}
      services:
        - name: longhorn-frontend
          port: 8000   # Asegúrate de que el puerto 8000 está configurado en el servicio de Kubernetes
          scheme: http
  tls:
    secretName: {{ tls_secret_name | default("wildcard-socialdevs-tls") }}  # El certificado TLS debe existir en el mismo namespace que el IngressRoute